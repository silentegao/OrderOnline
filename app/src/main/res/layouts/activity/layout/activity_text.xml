<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rui.myapplication.activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/tab_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/radio_group_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_110px"
        android:background="@drawable/bg_bottombar"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_button_home"
            style="@style/RadioGroupButtonStyle"
            android:drawableTop="@drawable/selector_bottom_tab_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/radio_button_order"
            style="@style/RadioGroupButtonStyle"
            android:drawableTop="@drawable/selector_bottom_tab_order"
            android:text="订单" />

        <RadioButton
            android:id="@+id/radio_button_my"
            style="@style/RadioGroupButtonStyle"
            android:drawableTop="@drawable/selector_bottom_tab_my"
            android:text="我的" />
    </RadioGroup>

</com.zhy.autolayout.AutoLinearLayout>
